@model PetShopApp.Models.Category


@{
    ViewBag.Title = "Editare categorie";
}

<style>
    body {
        background-color: #3A506B;
        color:white;
    }
</style>

<h2 style="color:white">@ViewBag.Title</h2>

<form method="post" action="/Categories/Edit/@Model.Id">


    @Html.Label("CategoryName", "Denumire categorie")
    <br />
    @Html.Editor("CategoryName")
    <br /><br />

    <button style="background-color:#0B132B" class="btn btn-success" type="submit">Modifica categoria</button>

</form>
